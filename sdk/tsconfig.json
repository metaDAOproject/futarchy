{
  "compilerOptions": {
    "types": [
      "mocha",
      "chai"
    ],
    "paths": {
      "@metadaoproject/futarchy/v0.3": ["./dist/v0.3/types/index.d.ts"],
      "@metadaoproject/futarchy/v0.4": ["./dist/v0.4/types/index.d.ts"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "esnext"
    ],
    "module": "NodeNext",
    "target": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "declaration": true
  },
  "include": [
    "src/*",
    "src/v0.3/*",
    "src/v0.4/*"
  ],
  "exclude": [
    "node_modules",
    "target",
    "tests",
    "migrations"
  ]
}
